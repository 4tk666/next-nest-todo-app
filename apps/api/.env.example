# Database
# Postgres Docker設定
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=next-nest-todo-app

# Prisma接続設定
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}?schema=public"
DIRECT_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}?schema=public"

# JWT設定
# 強力なランダム文字列を生成してください（例：openssl rand -base64 32）
JWT_SECRET="your_jwt_secret_key_here"

# Server設定
PORT=4000

# CORS設定
CORS_ORIGIN="http://localhost:3000"
